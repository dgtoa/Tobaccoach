<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"> <!-- Remove <selector> wehn you are using <layer-list> -->
    <item>
        <!-- Our grey ring, 1st element of our list -->
        <shape android:shape="ring"
            android:useLevel="false"
            android:innerRadius="60dp"
            android:thicknessRatio="30"> <!-- Higher values, thinner line -->
            <solid android:color="@color/color_background_progress_today_average_amount"/>
        </shape>
    </item>

    <item>
        <!-- Our red ring, 2nd element of our list -->
        <shape android:shape="ring"
            android:useLevel="true"
            android:innerRadius="60dp"
            android:thicknessRatio="30">
            <solid android:color="@color/color_main_progress_today_average_amount"/>
        </shape>
    </item>
</layer-list>