<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background_color">

    <!--<ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/title_img" />-->
    <ImageView
        android:id="@+id/tobacco_logo_login_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:scaleX="0.4"
        android:scaleY="0.4"
        app:srcCompat="@drawable/tobaccoach_logo"
        android:layout_above="@+id/input_id"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/login_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/input_id"
        android:textSize="15dp"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/input_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/input_password"
        android:layout_alignLeft="@+id/input_password"
        android:layout_alignStart="@+id/input_password"
        android:layout_marginBottom="17dp"
        android:background="@null"
        android:ems="10"
        android:hint="ID"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:text="example"/>

    <EditText
        android:id="@+id/input_password"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:password="true"
        android:text="1234"/>

    <CheckBox
        android:id="@+id/keep_login_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/input_password"
        android:layout_alignStart="@+id/input_password"
        android:layout_below="@+id/input_password"
        android:layout_marginTop="12dp"
        android:checked="false"
        android:text="Keep logged in" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/keep_login_check"
        android:background="@drawable/login_button_state"
        android:layout_centerInParent="true"
        android:scaleX="0.5"
        android:scaleY="0.5"
        />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/input_password"
        app:srcCompat="@drawable/line_img" />



    <ImageView
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/input_id"
        app:srcCompat="@drawable/line_img" />

    <Button
        android:id="@+id/sign_up_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/signup_img_state"
        android:scaleY="0.7"
        android:scaleX="0.7"
        />



</RelativeLayout>
